<!DOCTYPE html>
<html>
  <head>
    <title>RetroTwitter</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Shrikhand">
  </head>
  <body style="background: linear-gradient(to right, #0066ff, #3399ff)">
    <div>
        <h1 class = "large-title"  style = "font-family: Shrikhand">
            RetroTwitter
        </h1>
        <h3 class = "small-title" style="font-size: 20px; font-weight:bold">
            Bring your tweets back to a more rad time!
        </h3>
    </div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6"> 
            <form id="searchform" method="get" accept-charset="utf-8">
                <div class="input-group input-group-lg">
                    <!--<span class ="input-group-btn">
                        <button class="btn btn-primary" type="text" value="text">@<i class="fa font-awesome"></meter></i></button>
                    </span>-->
                    <input type="text" class="form-control" id="searchbox" name="q" placeholder="Twitter Handle">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit" style="border:none"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <div>
        <p class = "small-title" style = "font-weight:bold"> <%= error %> </p>
    </div>

    <div class="center">
        <ul class="list-group">
            <% tweets.forEach(function(tweet){ %>
                <li class="list-group-item tweet"> 
                    <table class>
                        <th></th>
                        <tr>
                            <td><img src="new.jpeg" width=150 height=150></td>
                            <td> <%= tweet.new_text %></td>
                        </tr>
                    </table>
                </li>
                <br>
            <%  }); %>
        </ul>
    </div>
  </body>
</html>
